<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recipe"
            type="com.sgg.healthykaly.model.RecipeEntity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="192dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/app_bar_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_food"
                    app:layout_collapseMode="parallax"
                    app:srcCompat="@drawable/ic_launcher_background"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/margin_title_bottom"
                    android:background="@drawable/light_grey_background"
                    android:paddingStart="@dimen/padding_title_left"
                    android:text="Stevia-Sweetened Currant Banana Bread"
                    android:textAppearance="@style/display1_custom"
                    android:textColor="@color/amber_100" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/negative_margin_scroll_view"
            android:background="@drawable/round_border"
            android:paddingStart="@dimen/padding_h_nested_scroll_view"
            android:paddingTop="@dimen/padding_v_nested_scroll_view"
            android:paddingEnd="@dimen/padding_h_nested_scroll_view"
            android:paddingBottom="@dimen/padding_v_nested_scroll_view"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus eleifend ac tellus id bibendum. Nulla eget nibh maximus, ornare est congue, egestas elit. Suspendisse in faucibus ex. Integer congue scelerisque mi quis molestie. Aenean tincidunt nunc sit amet neque finibus, quis tincidunt erat ornare. Aliquam quam purus, bibendum at tellus sed, vestibulum faucibus dolor. Nulla at ligula massa. Sed finibus dolor ut fermentum pharetra. Nullam at faucibus mi. Praesent dui sem, hendrerit vitae vestibulum eu, viverra at dui. Interdum et malesuada fames ac ante ipsum primis in faucibus.  Fusce blandit metus diam. Vivamus fringilla finibus nibh vel pretium. Aenean et dui dignissim, cursus neque eu, scelerisque lorem. Nunc ante ex, blandit eget cursus ac, tincidunt non ipsum. Sed blandit risus pharetra erat facilisis congue. Quisque eu elementum ipsum, vitae posuere lectus. Donec nec lorem semper, ullamcorper nibh sed, efficitur libero. In faucibus rhoncus metus sit amet porta. Curabitur tempus est massa, vel molestie magna pharetra vel. Cras nunc purus, imperdiet eu purus vel, laoreet fermentum leo.  Etiam vitae aliquet odio. Nam sit amet sem nibh. Suspendisse vel condimentum lacus. Praesent dapibus nibh eget ante commodo aliquet. Nam rhoncus felis odio, laoreet ullamcorper sem eleifend eget. Integer a ex elit. Vestibulum porttitor luctus mollis. Etiam rhoncus mauris quis libero imperdiet suscipit at eu mi."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>